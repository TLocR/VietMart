@model IEnumerable<VietMark.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<h2>Quản lý sản phẩm</h2>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <div class="row element-button">
                    <div class="col-sm-2">
                        <p class="btn btn-add btn-sm">
                            <i class="fas fa-plus"></i>
                            @Html.ActionLink("Thêm mới", "Create")
                        </p>
                    </div>
                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm nhap-tu-file" type="button" title="Nhập" onclick="myFunction(this)">
                            <i class="fas fa-file-upload"></i> Tải từ file
                        </a>
                    </div>

                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm print-file" type="button" title="In" onclick="myApp.printTable()">
                            <i class="fas fa-print"></i> In dữ liệu
                        </a>
                    </div>
                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm print-file js-textareacopybtn" type="button" title="Sao chép">
                            <i class="fas fa-copy"></i> Sao chép
                        </a>
                    </div>

                    <div class="col-sm-2">
                        <a class="btn btn-excel btn-sm" href="" title="In"><i class="fas fa-file-excel"></i> Xuất Excel</a>
                    </div>
                    <div class="col-sm-2">
                        <a class="btn btn-delete btn-sm pdf-file" type="button" title="In" onclick="myFunction(this)">
                            <i class="fas fa-file-pdf"></i> Xuất PDF
                        </a>
                    </div>
                </div>
                <table class="table table-hover table-bordered" id="sampleTable">
                    <thead>
                        <tr>
                            <th width="10"><input type="checkbox" id="all"></th>
                            <th>Phân loại</th>
                            <th>Tên sản phẩm</th>
                            <th>Thời gian tạo sản phẩm</th>
                            <th>Thời gian sửa thông tin gần nhất</th>
                            <th>Mã code</th>
                            <th>Hình ảnh</th>
                            <th>Miêu tả</th>
                            <th width="100px">Giá bán</th>
                            <th>Đang giảm giá</th>
                            <th>Số lượng tồn kho</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td width="10"><input type="checkbox" name="check1" value="1"></td>
                                <td>@Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSP)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenSP)</td>
                                <td>@Html.DisplayFor(modelItem => item.ThoiGianTao)</td>
                                <td>@Html.DisplayFor(modelItem => item.ThoiGianSua)</td>
                                <td>@Html.DisplayFor(modelItem => item.code)</td>
                                <td><img src="@item.Image" style="width: 100px; height: 100px;" /></td>
                                <td>@Html.DisplayFor(modelItem => item.Mieuta)</td>
                                <td>@String.Format(info, "{0:c0}", item.GiaBanBanDau)</td>
                                <td>@Html.DisplayFor(modelItem => item.PhanTramGiamGia)%</td>
                                <td>@Html.DisplayFor(modelItem => item.SoLuongTon)</td>
                                <td>
                                    <button class="btn btn-primary btn-sm trash" type="button" title="Xóa">
                                        <i class="fas fa-trash-alt">@Html.ActionLink("Delete", "Delete", new { id = item.Id_SanPham })</i>

                                    </button>
                                    <button class="btn btn-primary btn-sm edit" type="button" title="Sửa" id="show-emp" data-toggle="modal"
                                            data-target="#ModalUP">
                                        <i class="fas fa-edit">@Html.ActionLink("Edit", "Edit", new { id = item.Id_SanPham })</i>
                                    </button>
                                    <button class="btn btn-primary btn-sm edit" type="button" title="Sửa" id="show-emp" data-toggle="modal"
                                            data-target="#ModalUP">
                                        <i class="fas fa-edit">@Html.ActionLink("Details", "Details", new { id = item.Id_SanPham })</i>
                                    </button>

                                </td>
                            </tr>

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

