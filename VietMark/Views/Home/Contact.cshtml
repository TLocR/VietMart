<div class="contact-area ptb-100 ptb-sm-60">
    <div class="container">
        <h3 class="mb-20">Liên hệ với chúng tôi</h3>
        <p class="text-capitalize mb-20">Để lại thông tin và lời nhắn của bạn về vấn đề của hệ thống của chúng tôi</p>
        <form id="contact-form" class="contact-form" action="@Url.Action("SendFeedBack", "Home")" method="post">
            <div class="address-wrapper row">
                <div class="col-md-12">
                    <div class="address-fname">
                        <input class="form-control" type="text" name="name" placeholder="Họ và tên">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="address-email">
                        <input class="form-control" type="email" name="email" placeholder="Email">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="address-web">
                        <input class="form-control" type="text" name="number_phone" placeholder="Số điện thoại liên hệ">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="address-subject">
                        <input class="form-control" type="text" name="subject" placeholder="Tên chủ đề">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="address-textarea">
                        <textarea name="message" class="form-control" placeholder="Nội dung phản hồi"></textarea>
                    </div>
                </div>
            </div>
            <p class="form-message">
                <div class="footer-content mail-content clearfix">
                    <div class="send-email float-md-right">
                        <input value="Gửi" class="return-customer-btn" type="submit">
                    </div>
                </div>
        </form>
    </div>
</div>
<!-- Contact Email Area End -->
